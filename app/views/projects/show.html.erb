<h1><%= @project_analyser.project.name %></h1>
    <ul class="project-urls">
      <li>Github Url: <%= link_to "Github", @project_analyser.project.github_url, target: "_blank" %>
      </li>
      <li>Heroku Url: <%= link_to "Heroku", @project_analyser.project.heroku_url, target: "_blank" %>
      </li>
    </ul>
<div class="row panel panel-default project-panel">
  <div class="video-embed col-xs-6">
    Video Coming Soon!
  </div>
  <div class="screenshot col-xs-6">
    <div id="screenshot-<%= @project_analyser.project.id %>">
      <%= render partial: 'projects/screenshot', locals: {project: @project_analyser.project} %>
       <%= link_to "Get Screeshot", screenshot_path(@project_analyser.project), remote: true, class: 'btn btn-primary', id: 'screenshot-btn'%>
    </div>
  </div>
  
</div>
<div class="row panel panel-default project-panel">
  <div class="col-xs-6">
    <%= pie_chart @project_analyser.commit_ratios %>
  </div>
  <div class="col-xs-6">
    <%= line_chart @project_analyser.overall_commit_frequency %>
  </div>
</div>
<div class="row">
  <h3>Analysis</h3>
    <% @project_analyser.criticisms.each do |criticism| %>
      <div class=col-xs-12>
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= criticism.name %></h3>
          </div>
          <div class="panel-body">
            <table class='table table-hover'>
              <thead>
                <tr>
                  <td>
                    Type
                  </td>
                  <td>
                    Details
                  </td>
                  <td>
                    Locations
                  </td>
                </tr>
              </thead>
              <tbody>
                <% criticism.smells.each do |smell| %>
                <tr>
                  <td><%= smell.type %></td>
                  <td><%= smell.details %></td>
                  <td>
                    <ul>
                    <% smell.locations.each do |location| %>
                      <li><%= link_to "Source", location, target: "_blank"%> </li>
                    <% end %>
                    </ul>
                  </td>
              </tr>
                <% end %>
              </tbody>
            </table>
          <ul>
          </ul>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
</div>
